<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Login Successfully"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/temp_use"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <Button
        android:text="Check Near By Audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/index_bt_toNeighbor" />

    <Button
        android:id="@+id/index_bt_toSelfpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Self Audio" />

    <Button
        android:id="@+id/index_bt_toFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Friend Audio" />
</LinearLayout>