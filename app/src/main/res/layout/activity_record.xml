<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Audio"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/maroon"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textSize="22sp"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/record_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Tag"
            android:textSize="22sp"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/record_et_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Latitude: "
            android:textSize="22sp"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/record_tv_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Longitude: "
            android:textSize="22sp"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/record_tv_lng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="File Name: "
            android:textSize="22sp"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/record_et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/record_bt_start"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/red_button"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:text="Start" />

        <Button
            android:id="@+id/record_bt_stop"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/red_button"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:text="Stop" />

        <Button
            android:id="@+id/record_bt_replay"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/red_button"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:text="Replay" />

        <Button
            android:id="@+id/record_bt_submit"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/red_button"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:text="Submit" />
    </LinearLayout>
</LinearLayout>